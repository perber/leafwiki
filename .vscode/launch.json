    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch leafwiki",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/leafwiki/main.go",
            "args": [
                "--jwt-secret=secretkey",
                "--admin-password=anewpassword",
                "--allow-insecure=true"
            ],
        },
        {
            "name": "Launch leafwiki public edit",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/leafwiki/main.go",
            "args": [
                "--allow-insecure=true",
                "--disable-auth=true"
            ],
        },
        {
            "name": "Launch leafwiki with public pages",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/leafwiki/main.go",
            "args": [
                "--jwt-secret=secretkey",
                "--public-access=true",
                "--allow-insecure=true",
                "--admin-password=anewpassword"
            ],
        },
        // admin reset
        {
            "name": "Admin reset",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/leafwiki/main.go",
            "args": [
                "reset-admin-password"
            ],
        }
    ]
}